%h1 Listing words
=link_to 'all',words_url
=link_to 'brand',words_url(:isbrand=>true)
=link_to 'published',words_url(:publish=>true)
=link_to 'unpublished',words_url(:publish=>false)

=paginate @words
%table.table
  %tr
    %th Name
    %th Slug
    %th Publish
    %th Isbrand
    %th Keywords
    %th
    %th
    %th

  - @words.each do |word|
    %tr
      %td=link_to word.name,root_url(:subdomain=>word.slug)
      %td= word.slug
      %td= word.publish
      %td= word.isbrand
      %td= word.keywords
      %td= link_to 'Show', word
      %td= link_to 'Edit', edit_word_path(word)
      %td= link_to 'Destroy', word, method: :delete, data: { confirm: 'Are you sure?' }

%br

= link_to 'New Word', new_word_path
